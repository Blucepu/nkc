          //  span(title=title)= user.username
          img(class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" src=`/avatar/${user.uid}` style='float: right;width: 2em;height: 2em;border-radius: 50%;display:inline-block;margin-left: 0.5rem;')

          ul.dropdown-menu(style='float: rigth;')
            li
