      -var isActive = function(label){return (navbar_highlight==label)?'background-color: #337ab7;color: #fff;':''}
      if data.user
        - var user = data.user
        .navbar-brand(style='float: right;min-width: 7em;padding-top: 8px;padding-bottom: 8px').userInfo-m.dropdown
