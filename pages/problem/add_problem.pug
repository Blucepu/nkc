extends ../bootstrap_base
block title
  title 报告问题
  -const mainContainer1400 = true;
block content
  .container-fluid(style='max-width: 1400px')
    .col-xs-12.col-md-6.col-md-offset-3
      .form
        .form-group
          lable 标题
          input.form-control#title(type='text' placeholder='请一句话概括您所遇到的问题')
        .form-group
          lable 具体内容
          textarea.form-control#content(placeholder='请详细描述您所遇到问题' rows=10)
        .form-group
          h5.text-danger 请留下您的联系方式，当问题被修复后我们将会第一时间通知您。
        .form-group
          lable 邮箱
          input.form-control#email
        .form-group
          lable QQ
          input.form-control#QQ
        .form-group
          button.btn.btn-primary.btn-block#submit 提交
        .form-group
          h4=`科创论坛值班室：${data.serverSettings.telephone}`
block scripts
  script(src='/interface_common.js')
  script(src='/problem/add_problem.js')
