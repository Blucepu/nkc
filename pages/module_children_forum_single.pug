  -let klass = ' col-xs-11 col-sm-6 col-md-6 hidden-xs';
  if selectBox
    -klass = ' col-xs-11 col-sm-5 col-md-5 hidden-xs';
  div(class=klass)
    .text-center(style='padding-top: 0.3rem;overflow: hidden;')
      .post-count
        span= forum.countPostsToday
        p 今日更新
      .post-count(style=`border-right: 3px solid ${forum.color}`)
        span &nbsp;
        p &nbsp;
      .post-count
        span= forum.countPosts
        p 讨论
      .post-count
        span= forum.countThreads
        p 文章
  if selectBox
    .col-xs-1.col-sm-1.col-md-1
      if (!forum.childrenForums || forum.childrenForums.length === 0)
        label
          .icheckbox
            input(type='checkbox' name='selectForum' data-fid=forum.fid)


