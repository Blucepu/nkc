extends bootstrap_base
block title
  link(rel='stylesheet', href='/fund.css')
  title= `科创基金账单列表`
block content
  -const mainContainer1400 = true
  -const {fundSettings} = data;
  .container-fluid(style='max-width: 1400px;')
    include interface_fund_nav
    .row
      .col-xs-12.col-md-9
        .panel.panel-default
          .panel-body
            h2.text-center 账单列表
            hr
            ul.nav.nav-tabs
              li(role="presentation" class= !data.type? 'active' : '')
                a(href=`/fund/bills${data.paging.page > 0 ?`?page=${data.paging.page}`:''}`) 资金池
              li(role="presentation" class= data.type === 'all'? 'active' : '')
                a(href=`/fund/bills?type=all${data.paging.page>0?`&page=${data.paging.page}`:''}`) 全部账单
            if data.bills.length === 0
              .blank 暂无数据
            else
              if data.type === 'all'
                h4(style='color:#ff7979;')= `总资金(资金池+所有基金项目)剩余：${data.balance.toFixed(1)}元`
              else
                h4(style='color:#ff7979;')= `资金池剩余：${data.balance.toFixed(1)}元`
              -const url = `/fund/bills`;
              include interface_fund_page
              include interface_fund_bill_list
      .col-xs-12.col-md-3
        include interface_fund_aside

block scripts
  script(src='/interface_common.js')
  script(src='/interface_fund_general_bills.js')