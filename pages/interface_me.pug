            .col-xs-12.col-md-4
              .form-group
                label(for="name")
                  -if(data.user.mobile)
                    .h5 手机号码
                      span(style='color: #888; font-size: 1.2rem') &nbsp已绑定手机号码：+#{data.user.nationCode} #{data.user.mobile}
                  -else
