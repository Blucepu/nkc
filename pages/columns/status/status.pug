extends ../settings/settings.pug
block settingsTitle
  title 数据统计
block settingsContent
  .column-status
    h2 数据统计
    hr
    h4 总览
    .m-b-4
      .row
        .col-xs-6.col-md-3
          .status-number
            span 订阅数
            .number=tools.briefNumber(data.column.subCount)
        .col-xs-6.col-md-3
          .status-number
            span 阅读数
            .number=tools.briefNumber(data.column.postHits)
        .col-xs-6.col-md-3
          .status-number
            span 点赞数
            .number=tools.briefNumber(data.column.postVoteUp)
        .col-xs-6.col-md-3
          .status-number
            span 分享数
            .number=data.column.subCount
    .m-b-1
      h4 订阅趋势
      #subscriptionDom
    .m-b-1
      h4 阅读趋势
      #hitDom
    .m-b-1
      h4 点赞趋势
      #voteUpDom
    .m-b-1
      h4 分享趋势
      #shareDom
  .hidden#data=objToStr({times: data.times, subscriptions: data.subscriptions, hits: data.hits, voteUp: data.voteUp, share: data.share})
block settingsScripts
  +includeJS("/echarts/dist/echarts.min.js")
  +includeJS('/columns/status/status.js')