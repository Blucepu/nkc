        //button.btn.btn-default.btn-sm(onclick=`pushGoodsToHome('', 'push')`) 设为热销
        //
        //
        //button.btn.btn-default.btn-sm(onclick=`closeThread('')`) 关闭主题
        //
        //button.btn.btn-default.btn-sm(onclick=`openThread('')`) 开放主题
        //
        //button.btn-sm.btn.btn-default(onclick="moveThread()") 移动

        button.btn-sm.btn.btn-danger(onclick="deleteArticle()") 退修/删除
      else if data.columnPost.type === 'thread'
        button.btn-sm.btn.btn-default(onclick=`toUrl('${url}')`) 去社区文章
