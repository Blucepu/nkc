        //button.btn.btn-default.btn-sm(onclick=`unHomeAd('')`) 取消首页推荐
        //
        //a.btn.btn-default.btn-sm(href=`/t//ad`).m-l-05 首页推荐
        //
        //
        if data.homeTopped
          button.btn.btn-default.btn-sm(onclick=`unHomeTop('')`) 取消首页置顶
        else
          button.btn.btn-default.btn-sm(onclick=`homeTop('')`) 首页置顶

        //button.btn.btn-default.btn-sm(onclick=`communityTop('', false)`) 取消社区置顶
