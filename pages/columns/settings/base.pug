extends ../columnBase
block content
  .container-fluid.max-width
    .column
      .row
        .col-xs-12.col-md-12.m-b-1
          div
            .column-settings-nav
              a(href=`/m/${data.column._id}`) 返回专栏
              a(href=`/m/${data.column._id}/settings` class=data.highlight==="info"?"active":"") 专栏设置
              a(href=`/m/${data.column._id}/settings/category` class=data.highlight==="category"?"active":"") 分类管理
              a(href=`/m/${data.column._id}/settings/post` class=data.highlight==="post"?"active":"") 内容管理
              a(href=`/m/${data.column._id}/settings/post/add` class=data.highlight==="addPost"?"active":"") 添加内容
              a(href=`/m/${data.column._id}/settings/page` class=data.highlight==="page"?"active":"") 自定义页
              a(href=`/m/${data.column._id}/settings/contribute` class=data.highlight==="contribute"?"active":"") 投稿处理
            hr.m-t-05
            div
              block settingsContent



