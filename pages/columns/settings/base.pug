extends ../columnBase
block content
  .container-fluid.max-width
    .column
      .row
        .col-xs-12.col-md-12.m-b-1
          div
            .column-settings-nav
              if !state.isApp
                a(href=`/m/${data.column._id}`) 返回专栏
              a(href=`/m/${data.column._id}/settings` class=data.highlight==="info"?"active":"" data-type='reload') 专栏设置
              a(href=`/m/${data.column._id}/settings/category` class=data.highlight==="category"?"active":"" data-type='reload') 分类管理
              a(href=`/m/${data.column._id}/settings/post` class=data.highlight==="post"?"active":"" data-type='reload') 内容管理
              a(href=`/m/${data.column._id}/settings/post/add` class=data.highlight==="addPost"?"active":"" data-type='reload') 添加内容
              a(href=`/m/${data.column._id}/settings/page` class=data.highlight==="page"?"active":"" data-type='reload') 自定义页
              a(href=`/m/${data.column._id}/settings/contribute` class=data.highlight==="contribute"?"active":"" data-type='reload') 投稿处理
            hr.m-t-05
            div
              block settingsContent



