            label.radio-inline
              input(type="radio" v-model="form.sort" name="sort" value="toc")
              | toc
            label.radio-inline
              input(type="radio" v-model="form.sort" name="sort" value="postCount")
              | postCount
            label.radio-inline
              input(type="radio" v-model="form.sort" name="sort" value="voteUpCount")
              | voteUpCount
