extends ../bootstrap_base
block title
  title 消息
  style.
    body{
      padding: 0;
    }
    .footer, .navbar{
      display: none;
    }
    .message-status-container{
      height: 100%;
      width: 100%;
      position: absolute;
      background-color: #737373;
    }
    .message-status{
      display: inline-block;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      margin: auto;
      position: absolute;
      height: 5rem;
      width: 5rem;
      text-align: center;
    }
block content
  #targetUserId.hidden=data.targetUserId
  .message-status-container
    .message-status
      .fa.fa-spinner.fa-spin.fa-2x
      .m-t-05 加载中
block scripts
  script.
    var targetUserId = document.getElementById('targetUserId').innerText;
    var messageApp = RootApp.$refs.chat;
    messageApp.showMessagePanel(targetUserId || '');
    if($(window).width() <= 768) {
      messageApp.setMaximize();
    } else {
      $('.message-status').hide();
    }
