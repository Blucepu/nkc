.row
  .col-xs-12.col-sm-6
    .UserProfileSection1
      include interface_profile_avatar.pug
      -var user = thatuser
      -var uid = thatuser.uid
      div(style='display:inline-block;margin-top:8px;')
        //.ForumTitleCircle(style='background-color:#{user.color||"#bbb"}')
        .ForumName #{user.username}&nbsp;&nbsp;&nbsp;
          if(user.uid != data.user.uid)
            if(data.user.subscribeUsers.indexOf(user.uid) > -1)
              a.btn.btn-sm.btn-danger(href='javascript:;' onclick=`subscribeUser("${uid}", false)`)#subscribeButton 取关
            else
              a.btn.btn-sm.btn-info(href='javascript:;' onclick=`subscribeUser("${uid}", true)`)#subscribeButton 关注
    include interface_profile_info_section2.pug
          
  .col-xs-12.col-sm-6
    .UserProfileSection1(style='text-align:left')
      h4 个人简介
      //hr
      if user.description && user.description.length>0
        
        div!=markdown_safe(user.description)
        hr
      
      h4 帖子签名
      //hr
      if user.post_sign && user.post_sign.length>0
        
        div!=markdown_safe(user.post_sign)
