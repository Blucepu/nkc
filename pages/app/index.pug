extends ../bootstrap_base
block title
  title 应用下载
  +includeCSS('/app/index.css')
block content
  #data.hidden=objToStr({app: data.stable})
  .container-fluid.max-width#app(v-cloak)
    .row
      .col-xs-12.col-md-12.text-center
        .m-b-1
          img.logo(src=tools.getUrl('siteIcon', 'MD'))
        .m-b-2
          h4=`${remoteState.serverSettings.websiteName}`
        .m-b-2(v-if='inApp')
          .info 请点击右上角选择在浏览器打开
        div(v-else)
          .m-b-2
            a.btn.btn-primary.m-b-1(
              :href=`appInfo.android.url`
              :title="appInfo.android.title"
              :disabled="appInfo.android.disabled"
              )
              i.m-r-05.fa.fa-android
              span Android {{appInfo.android.version}}
            button.m-b-1.btn.btn-default(
              :disabled="appInfo.ios.disabled"
              :title='appInfo.ios.title'
              )
              i.m-r-05.fa.fa-apple
              span IOS {{appInfo.ios.version}}
          .m-b-1(v-if="appInfo.android.desc")
            .app-desc.bg-info.pre-wrap.p-a-1.text-left
              span Android {{appInfo.android.version}} <br>-----<br>
              span {{appInfo.android.desc}}
block footer
block scripts
  +includeJS('/app/index.js')
