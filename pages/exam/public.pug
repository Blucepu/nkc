extends ../bootstrap_base
block title
  title=`开卷考试说明`
  +includeCSS('/exam/public.css')
block content
  .container-fluid.max-width
    include ../publicModules/appNavbar/appNavbar
    +appNavbar
    .examNotes
      h3.m-b-1 注册说明
      .pre-content.m-b-1!=markdown_safe(data.examNotice)
      .btn.btn-default.fund-terms-button(onclick=`visitPublicExam('${data.cid}')`) 参加考试
block scripts
  script.
    function visitPublicExam(cid) {
      window.location.href = '/exam/paper?cid=' + cid + '&userFrom=register';
    }
