extends bootstrap_base.pug

block title
  -const hiddenFooter = true;
  link(href='/interface_experimental.css' rel='stylesheet')
  title 管理界面

block content

  .container-fluid(style='max-width: 1400px;')
    .row
      .col-xs-12.col-md-12
        .h2
          span.fa.fa-cogs &nbsp;后台管理
      .col-xs-12.col-md-12
        .panel.panel-default
          .panel-body
            h4 查看
            a.marginOfA.btn.btn-default(href="/f/recycle") 回收站
            a.marginOfA.btn.btn-default(href="/f/draft") 草稿版
            a.marginOfA.btn.btn-default(href='/e/stats') 统计
            a.marginOfA.btn.btn-default(href='/e/newUsers') 新用户
            a.marginOfA.btn.btn-default(href='/e/behavior') 积分变动
            a.marginOfA.btn.btn-default(href='/log') 网站日志

            hr
            h4 系统
            a.marginOfA.btn.btn-default(href='/e/newSysinfo') 发新通知
            a.marginOfA.btn.btn-default(href='/auth') 身份认证审核
            //a.marginOfA.btn.btn-default(href='/settings') 系统设置
            hr
            h4 科创基金
            a.marginOfA.btn.btn-default(href='/fund/disabled') 被屏蔽的基金
            a.marginOfA.btn.btn-default(href='/fund/settings') 科创基金设置
            hr
            h4 专业设置
            button.marginOfA.btn.btn-default(onclick='newForum()') 新建专业
            br
            h5 点击交换顺序
            .hidden#data= JSON.stringify({forums: data.forums, fidArr: data.forums.map(f => f.fid)})
            div#forumsDiv
            button.btn.btn-primary(onclick='saveForumsOrder()') 保存

              
    
  include debug_output.pug
block scripts
  script(src='./react/react.js')
  script(src='./react/JSXTransformer.js')
  script(src='/interface_common.js')
  script(type='text/jsx;harmony=true' src='./interface_experimental.js?v=4')
