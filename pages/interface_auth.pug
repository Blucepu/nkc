extends bootstrap_base
block title
  title= `身份认证申请列表`
  link(rel='stylesheet' href='/fund.css')
block content
  -const mainContainer1400 = true
  .container-fluid(style='max-width: 1400px;')
    .row
      .col-xs-12.col-md-8.col-md-offset-0
        .panel.panel-default
          .panel-heading
            span 身份认证申请
          .panel-body
            table.table.table-striped
              thead
                tr
                  th UID
                  th 用户名
                  th 认证类型
                  th 链接
              tbody
                -for(let auth of data.usersAuth)
                  -const {targetUser, authLevel} = auth;
                  tr
                    th= targetUser.uid
                    th
                      a(href=`/u/${targetUser.uid}` target='_blank')=targetUser.username
                    th= `身份认证${authLevel+1}`
                    th
                      a(href=`/u/${targetUser.uid}/auth`) 去处理

block scripts
  script(src='/interface_common.js')
  script(src='/interface_auth.js')
