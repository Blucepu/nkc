extends bootstrap_base
block title
  link(rel='stylesheet' href='/external_pkgs/citySet/citySet.css')
  title 交易信息设置
  -const mainContainer1400 = true
  link(href='/bootstrap/css/bootstrap-chinese-region.min.css' media="screen" rel='stylesheet')

block content
  .container-fluid.max-width
    .row
      .col-xs-12.col-md-2
        include module_user_settings
      .col-xs-12.col-md-10
        .panel.panel-primary
          .panel-heading
            span 交易信息设置
          .panel-body
            button.btn.btn-primary(onclick='addAddress()') 添加交易信息
            #addressDiv
            .template.hidden
              .form-horizontal(style='margin: 2rem 0;')
                .form-group
                  label.col-sm-2.control-label
                  .col-sm-10
                    h4 交易信息&nbsp;
                      span.addressNumber 1
                .form-group
                  label.col-sm-2.control-label 收货地址：
                  .col-sm-6
                    input.location.form-control(name='', type='text', placeholder='请选择省、市、区', autocomplete='off', readonly='true', value=`${data.dealInfo?data.dealInfo.location:""}`)
                    input.form-control.address(type='text' placeholder="填写详细地址")
                .form-group
                  label.col-sm-2.control-label 联系电话：
                  .col-sm-6
                    input.form-control.mobile(type='text')
                .form-group
                  label.col-sm-2.control-label 收件人：
                  .col-sm-6
                    input.form-control.username(type='text')
                .form-group
                  label.col-sm-2.control-label
                  .col-sm-6
                    button.btn.btn-primary(onclick=`submit(${data.targetUser.uid})`) 保存
                    button.btn.btn-danger 删除
            //.form-horizontal
              .form-group
                label.col-sm-2.control-label 收货地址：
                .col-sm-10
                  .row#address-div
                  button.btn.btn-primary(onclick='addAddress()') 添加
              .form-group
                .col-sm-4.col-sm-offset-2
                  button.btn.btn-primary(onclick=`submit(${data.user.uid})`) 保存
  #data.hidden= JSON.stringify({addresses: data.addresses, uid: data.targetUser.uid})

block scripts
  script(src=`/interface_common.js?v=${global.NKC.startTime}`)
  script(src='/bootstrap/js/bootstrap-chinese-region.min.js' charset="UTF-8")
  script(src=`/interface_user_settings_transaction.js?v=${global.NKC.startTime}`)
  +includeJS('/external_pkgs/citySet/city.json.js')
  +includeJS('/external_pkgs/citySet/citySet.js')  
  script.
    $(".location").click(function (e) {
      SelCity(this,e);
    });