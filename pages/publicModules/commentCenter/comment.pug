if !isIncluded('comment')
  +includeCSS('/publicModules/commentCenter/comment.css')
  .comment-container
    mixin skeleton
      .comment-item
        .comment-item-header
          .comment-item-avatar.skeleton
          .comment-item-info
            .comment-item-username.skeleton
            .comment-item-time.skeleton
        .comment-item-content
          div.skeleton
          div.skeleton
          div.skeleton
    .comment-header
    if data.comments &&  data.comments.length !== 0
      .comment-list.m-t-1
        .loading
          +skeleton
          +skeleton
          +skeleton
      .comment-list.m-t-1
        include ./singleComment/singleComment
        for comment in data.comments
          +singleComment(comment)
    #commentEditor.m-t-1(v-cloak)
      comment-editor(ref="commentEditor" source="comment" :sid="articleId" :comment="comment")
  +includeJS('/publicModules/commentCenter/comment.js')
