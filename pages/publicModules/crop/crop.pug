#module_crop
  .crop-content
    .crop-header
      input.hidden(type="file" accept="image/png, image/jpeg" id="module_crop_input" onchange="moduleCrop.selectedFile()")
      button.btn.btn-sm.btn-default(onclick="moduleCrop.selectFile()") 选择图片
      span 支持的图片格式：jpg, jpeg, png
      .fa.fa-remove.pull-right(onclick="moduleCrop.cancel()")
    .crop-image
      img(id="module_crop_image" style="max-width: 100%;")
    .crop-footer.text-right
      button.btn.btn-sm.btn-danger(onclick="moduleCrop.cancel()") 取消
      button.btn.btn-sm.btn-success(onclick="moduleCrop.complete()") 确定

