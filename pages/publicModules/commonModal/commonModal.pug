.modal.fade#moduleCommonModal(tabindex="-1" role="dialog" aria-labelledby="myModalLabel")
  .modal-dialog.modal-sm(role="document")#moduleCommonModalApp
    .modal-content
      .modal-header
        button.close(data-dismiss="modal" aria-label="Close")
          span(aria-hidden="true") &times;
        h4.modal-title {{title}}
      .modal-body
        .form
          .form-group(v-for="d in data")
            label(v-if="d.label") {{d.label}}
            input.form-control(v-if="d.dom === 'input'" :type="d.type || 'text'" v-model="d.value" :placeholder="d.placeholder || ''")
            textarea.form-control(v-if="d.dom === 'textarea'" v-model="d.value" :placeholder="d.placeholder || ''" :rows="d.rows || 4")
      .modal-footer
        h5(v-if="info") {{info}}
        button(type="button" class="btn btn-default btn-sm" data-dismiss="modal") 关闭
        button(type="button" class="btn btn-primary btn-sm" @click="submit") 确定

+includeJS("/publicModules/commonModal/commonModal.js")