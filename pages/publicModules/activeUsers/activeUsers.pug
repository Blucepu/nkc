if !isIncluded('activeUsers')
  +includeCSS('/publicModules/activeUsers/activeUsers.css')
  mixin activeUsersSmall(users, name)
    .active-users.active-users-small.m-b-1
      .panel-header=name || '最近活跃用户'
      div
        for u in users
          .active-user-avatar(
            data-global-mouseover="showUserPanel"
            data-global-mouseout="hideUserPanel"
            data-global-data=objToStr({uid: u.uid})
            )
            a(href=u.homeUrl target="_blank")
              img(src=u.avatarUrl)

  mixin activeUsers(users, name)
    .m-b-1
      .panel-header=name || '最近活跃用户'
      .active-users
        for u in users
          a(href=u.homeUrl
            data-global-mouseover="showUserPanel"
            data-global-mouseout="hideUserPanel"
            data-global-data=objToStr({uid: u.uid})
            target="_blank").active-user
            .active-user-avatar
              img(src=u.avatarUrl)
            .active-user-name=u.username


  mixin newUsersSmall(users)
    +activeUsersSmall(users, '新同学')
  mixin newUsers(users)
    +activeUsers(users, '新同学')
