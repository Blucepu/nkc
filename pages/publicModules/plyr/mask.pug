#threadSettings= JSON.stringify(data.threadSettings)

template#plyrMask
  .plyr-mask
    .plyr-mask-wrap
      p.player-tip-content= data.threadSettings.playerTips.tipContent
      p.player-tip-button
        button.play
          i.fa.fa-play-circle(aria-hidden="true")
          | 预览
        button.download
          i.fa.fa-arrow-circle-down(aria-hidden="true")
          | 下载

+includeJS("/publicModules/plyr/mask.js")
+includeCSS("/publicModules/plyr/mask.css")
          