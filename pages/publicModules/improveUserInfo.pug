if !isIncluded('publicModules/improveUserInfo.pug')
  mixin improveUserInfo(props)
    if props
      -
        var {
          uid, websiteCode, setUsername, setPassword, boundEmail, boundMobile, setAvatar, setBanner,
          setDescription, verifyPhoneNumber,
        } = props;

      if !setUsername || !setPassword || !boundEmail || !boundMobile || !setAvatar || !setBanner || !setDescription || !verifyPhoneNumber
        .improve.m-t-1.m-b-1
          .panel-header 完善资料
          p 由于你还未完善以下资料，可能无法使用网站的全部功能。
          if !setUsername
            .improve-info
              .fa.fa-exclamation-circle
              span 未修改默认用户名
              .pull-right
                a(href=`/u/${uid}/settings` target="_blank") 去修改
          if !setPassword
            .improve-info
              .fa.fa-exclamation-circle
              span 未设置密码
              .pull-right
                a(href=`/u/${uid}/settings/security` target="_blank") 去设置
          if !setAvatar
            .improve-info
              .fa.fa-exclamation-circle
              span 未上传头像
              .pull-right
                a(href=`/u/${uid}/settings` target="_blank") 去上传
          if !setBanner
            .improve-info
              .fa.fa-exclamation-circle
              span 未上传个人名片背景图
              .pull-right
                a(href=`/u/${uid}/settings` target="_blank") 去上传
          if !setDescription
            .improve-info
              .fa.fa-exclamation-circle
              span 未填写个人简介
              .pull-right
                a(href=`/u/${uid}/settings` target="_blank") 去填写
          if !boundMobile
            .improve-info
              .fa.fa-exclamation-circle
              span 未绑定手机号
              .pull-right
                a(href=`/u/${uid}/settings/security` target="_blank") 去绑定
          if !boundEmail
            .improve-info
              .fa.fa-exclamation-circle
              span 未绑定邮箱
              .pull-right
                a(href=`/u/${uid}/settings/security` target="_blank") 去绑定
          if !verifyPhoneNumber
            .improve-info
              .fa.fa-exclamation-circle
              span 请定期验证手机号
              .pull-right
                a(href=`/u/${uid}/settings/security` target="_self") 去验证
            //-script
              include ./lib/verifyPhoneNumber.js


