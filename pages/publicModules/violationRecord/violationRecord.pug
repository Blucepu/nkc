+includeCSS("/publicModules/violationRecord/violationRecord.css")

.modal.fade#violationRecord(tabindex="-1" role="dialog" aria-labelledby="myModalLabel")
  .modal-dialog.modal-lg(role="document")#violationRecordApp
    .modal-content
      .modal-header
        button.close(data-dismiss="modal" aria-label="Close")
          span(aria-hidden="true") &times;
        h4.modal-title 违规记录
      .modal-body
        //- 加载完了并且有至少一条记录
        table.table.table-bordered(v-if="!loadding && list.length")
          thead
            th 时间
            th 原因
          tbody
            tr(v-for="res, index of list")
              td {{format("YYYY-MM-DD HH:mm:ss", new Date(res.toc))}}
              td {{res.description}}
        //- 加载完了并且没有违规记录
        span(v-else-if="!loadding && !list.length") 无违规记录
        //- 没加载完
        span(v-else) 加载中...
      .modal-footer
        button.btn.btn-primary.btn-sm(@click='close()') 确定
include ../moment
+includeJS("/publicModules/violationRecord/violationRecord.js")
