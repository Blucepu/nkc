extends ../fundContainer
block fundTitle
  title= `科创基金-${data.fund.name}`
block fundContent
  -var {fund, bills} = data;
  .container-fluid.max-width
    .row
      .col-xs-12.col-md-12.box-shadow-panel
        div
          if bills.length === 0
            .blank 暂无数据
          else
            h2.text-center(style='color:#ff7979;')= `资金剩余：${data.balance.toFixed(1)}元`
            -const url = `/fund/list/${fund._id.toLowerCase()}/bills`;
            include ../page
            .table-responsive
              -const displayBalance = true;
              include ./billList
            include ../page
block fundScripts
  +includeJS('/fund/bills/fundBills.js')
