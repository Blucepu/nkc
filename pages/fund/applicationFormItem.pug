if !isIncluded('applicationFormItem')
  +includeCSS('/fund/applicationFormItem.css')
  mixin applicationFormItem(form)
    -var {fundName, code, money, users, statue} = form;
    -var {_id, money, title, url, time, status} = form;
    .application-form-item
      .application-form-header
        .fund-name=`${code} ${fundName}`
        .application-form-money=`Â¥ ${money}`
      .application-form-title
      .application-form-footer
        .timer=tools.timeFormat(time)
        .applicant-users
          for u in users
            -var {username, avatar, uid} = u
            .applicant-user(data-float-uid=uid)
              img(src=tools.getUrl('userAvatar', avatar))