extends bootstrap_base
block title
  link(rel='stylesheet', href='/fund.css')
  title= `科创基金-${data.fund.name}`
block content
  -const mainContainer1400 = true
  -const {fund, bills} = data;
  .container-fluid(style='max-width: 1400px;')
    include interface_fund_nav
    .row
      .col-xs-12.col-md-12
        if bills.length === 0
          .blank 暂无数据
        else
          h2.text-center(style='color:#ff7979;')= `资金剩余：${data.balance.toFixed(1)}元`
          -const url = `/fund/list/${fund._id.toLowerCase()}/bills`;
          include interface_fund_page
          .table-responsive
            include interface_fund_bill_list
          include interface_fund_page
block scripts
  script(src='/interface_common.js')
  script(src='/interface_fund_bills.js')