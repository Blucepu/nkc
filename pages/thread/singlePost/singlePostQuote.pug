if !isIncluded('singlePostQuote')
  mixin singlePostQuote(quote)
    -var {pid, uid, username, floor, content, userHome, postUrl} = quote;
    blockquote.quote-post
      .quote-position
        | 引用
        a(
          data-anonymous=!uid
          href=userHome
          target="_blank"
          data-global-mouseover="showUserPanel"
          data-global-mouseout="hideUserPanel"
          data-global-data=objToStr({uid})
          )=username
        | 发表于
        a(href=postUrl target="_blank")=floor
        | 楼的内容
      .quote-content=content
