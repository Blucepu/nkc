extends bootstrap_base

block title

  title 协议
  include ./publicModules/plyr/plyr.css.pug
block content
  .container-fluid.max-width
    .row
      .col-xs-12.col-md-8
        .p-t-2 
        if data.protocol
          p(style="text-align:center")
            span(style="font-size:xx-large")!=`${data.protocol.protocolName}`
          div!=`${data.protocol.protocolContent}`
      .col-xs-12.col-md-3.col-md-offset-1      
        .p-t-2        
        .list-header  
          span 协议列表
          div.line
        for pro in data.protocols
          .m-t-1
            a(href=`/protocol?type=${pro.protocolTypeId}`)
              span 《
              span!=`${pro.protocolName}`
              span 》
block scripts
  include ./publicModules/plyr/plyr.js.pug
  include ./publicModules/lazySizes