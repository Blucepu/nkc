extends ../bootstrap_base
block title
  title 通过邮箱找回密码
  -const mainContainer1400 = true;
  -const hiddenFooter = true;
block content
  .container-fluid(style='max-width: 1400px;' v-cloak)#app
    .row
      .col-xs-12.col-md-4.col-md-offset-4
        <div class="panel panel-default" style='margin-top: 3rem;'>
          <div class="panel-heading">通过邮箱找回密码</div>
          <div class="panel-body">
            .form
              <div class="form-group">
              <label for="exampleInputEmail1">用户名</label>
              <input type="text" class="form-control" placeholder="请输入用户名" v-model='username'>
              </div>
              <div class="form-group">
              <label for="exampleInputPassword1">邮箱地址</label>
              <input type="text" class="form-control"  placeholder="请输入邮箱地址" v-model='email'>
              </div>
              .row
                .col-xs-6.col-md-6
                  <div class="form-group">
                  <label for="exampleInputPassword1">验证码</label>
                  <input type="text" class="form-control"  placeholder="请输入验证码" v-model='code'>
                  </div>
                .col-xs-6.col-md-6
                  <div class="form-group">
                  <label for="exampleInputPassword1">&nbsp;</label>
                  .form-group.form-inline
                    button.form-control(@click='sendEmail' v-if='time <= 0') 发送验证码
                    button.form-control(v-else disabled) 发送验证码({{time}})
                  //<input type="sub" class="form-control"  placeholder="请输入邮箱地址">
                  </div>
              div(v-if='inputPassword')
                <div class="form-group">
                <label for="exampleInputEmail1">新密码</label>
                <input type="password" class="form-control" placeholder="请输入密码" v-model='password'>
                </div>
                <div class="form-group">
                <label for="exampleInputEmail1">重复新密码</label>
                <input type="password" class="form-control" placeholder="请重复密码" v-model='password2'>
                </div>
              <button class="btn btn-default btn-block" v-if='!inputPassword' disabled>提交</button>
              <button class="btn btn-default btn-block" @click='save' v-else>提交</button>
              a(href=`/forgotPassword/mobile` style='display: block;padding-top: 1rem;') 通过手机找回密码
          </div>
        </div>
block scripts
  script(src=`/forgotPassword/email.js?v=${startTime}`)
